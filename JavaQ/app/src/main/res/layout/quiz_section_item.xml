<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="32dp"
    android:paddingLeft="32dp"
    android:paddingTop="24dp"
    android:paddingBottom="24dp">

    <ImageView
        android:id="@+id/icon_section"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/icon_section_dummy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.547" />

    <TextView
        android:id="@+id/list_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sub_text"
        android:textSize="@dimen/text_sub"
        tools:text="Quiz 0"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@+id/icon_section"
        app:layout_constraintLeft_toRightOf="@+id/icon_section" />

    <TextView
        android:id="@+id/list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/mHeading"
        tools:text="Section name"
        app:layout_constraintTop_toBottomOf="@+id/list_num"
        app:layout_constraintLeft_toLeftOf="@+id/list_num"
        android:layout_marginTop="4dp" />
    <ImageView
        android:id="@+id/section_badge"
        android:layout_width="32dp"
        android:layout_height="32dp"
        tools:src="@drawable/ic_badge_notpassed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>